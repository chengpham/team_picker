<%- include('./partials/header') %>

<form action='/cohorts/<%= cohorts.id%>/edit' method='POST'>
    <input type='hidden' name='_method' value='PATCH'>
    <div class='form-group'>
        <label for="logo_url">Logo Url</label><br/>
        <input class='form-control' type="text" id="logo_url" name="logo_url" placeholder="eg. https://www.example.com/some.png" value="<%= cohorts.logo_url? cohorts.logo_url:''%>"/><br/>
        <label for="name">Name</label><br/>
        <input class='form-control'type="text" id="name" name="name" placeholder="Flying Funks" value="<%= cohorts.name? cohorts.name:'' %>" autocomplete="off"  autocapitalize="off" spellcheck="false" required/><br/>
        <label for="members">Member</label><br/>
        <textarea class='form-control' name='members' cols='60' rows='5' placeholder='Jon Snow, Daenerys, Melisandre, Arya Stark' autocomplete="off"  autocapitalize="off" spellcheck="false" required><%= cohorts.members? cohorts.members :''%></textarea><br/> 
    </div> 
    <input type='submit' value='Save' class='btn btn-outline-success'>
</form>

<%- include('./partials/footer') %>